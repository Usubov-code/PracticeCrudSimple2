@model Employee
@{
    ViewData["Title"] = "Update";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form asp-area="admin" asp-controller="Employee" asp-action="update" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All"></div>
                <div class="mb-3">
                    <label asp-for="@Model.FullName" class="form-label">FullName</label>
                    <input class="form-control" asp-for="@Model.FullName">
                    <span asp-validation-for="@Model.FullName" color="text-danger"> </span>

                    <label asp-for="@Model.Email" class="form-label">Email</label>
                    <input type="email" class="form-control" asp-for="@Model.Email">
                    <span asp-validation-for="@Model.Email" color="text-danger"> </span>

                    <label asp-for="@Model.Age" class="form-label">Age</label>
                    <input class="form-control" asp-for="@Model.Age">
                    <span asp-validation-for="@Model.Age" color="text-danger"> </span>


                    <label asp-for="@Model.Position.Name" class="form-label">Position</label>
                    <select class="form-control" asp-for="@Model.PositionId" asp-items="@(new SelectList(ViewBag.Position, "Id", "Name"))">
                        <option selected>Select Position</option>
                    </select>

                    <label asp-for="@Model.ImageFile" class="form-label">ImageFile</label>
                    <input class="form-control" asp-for="@Model.ImageFile">
                    <span asp-validation-for="@Model.ImageFile" color="text-danger"> </span>

                    <input asp-for="@Model.Id" hidden />
                    <input asp-for="@Model.Image" hidden />
                    <input asp-for="@Model.Age" hidden />
                    <input asp-for="@Model.Email" hidden />
                    <input asp-for="@Model.FullName" hidden />
                    <input asp-for="@Model.Position.Name" hidden />

                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>
</div>



